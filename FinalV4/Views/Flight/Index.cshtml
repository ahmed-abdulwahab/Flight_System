@using FinalV4.Models
@model List<Flight>
@{
    Layout = "_DisplayData";
}

<h1 class="text-center"> your Flights</h1>
<button class="btn btn-primary"><a class="nav-link text-white p-0" asp-area="" asp-controller="Flight" asp-action="AddFlight">Add Flight</a></button>
<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">

                
                <th>DateFrom</th>
                <th>Price</th>
                <th>NumberOfSites</th>
                <th>ArrivalCity</th>
                <th>DepartureCity</th>
                <th>CompanyName</th>
                <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {

            <tr>

                <td>@flight.DateFrom</td>
                <td>@flight.Price</td>
                <td>@flight.NumberOfSeats</td>
                <td>@flight?.ArrivalCity?.Name</td>
                <td>@flight?.DepartureCity?.Name</td>
                <td>@flight?.Company?.UserName</td>

                <td>
                    <form asp-action="DeleteFlight" asp-route-id="@flight.Id" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Flight?')" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
