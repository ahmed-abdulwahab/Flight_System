@using FinalV4.ViewModel
@model FlightViewModel
<form asp-action="AddFlight">
    <div class="form-group">
        <label asp-for="DateFrom.Year"></label>
        <input asp-for="DateFrom" class="form-control" />
        <span asp-validation-for="DateFrom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="price"></label>
        <input asp-for="price" class="form-control" />
        <span asp-validation-for="price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfSeates"></label>
        <input asp-for="NumberOfSeates" class="form-control" />
        <span asp-validation-for="NumberOfSeates" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepatureCityId"></label>
        <select asp-for="DepatureCityId" asp-items="@ViewBag.OriginCities" class="form-control"></select>
        <span asp-validation-for="DepatureCityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalCityId"></label>
        <select asp-for="ArrivalCityId" asp-items="@ViewBag.DestinationCities" class="form-control"></select>
        <span asp-validation-for="ArrivalCityId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="CompanyId" value="@Model.CompanyId" />
    <!-- Other form fields here... -->
    <button type="submit">ADD</button>
</form>

