                                            <div>  <i class="fa-sharp fa-solid fa-jet-fighter-up"></i></div>
                                            <div> <p>Economy</p></div>

                                        </div>
                                        <div class="Company">
                                            <div class="imge1"> <img src="img/1.png"></div>
                                            <div> <p class="name">Air Arab Egypt</p></div>

                                        </div>
                                    </div>
                                    <div class="col-md-3 data">
                                        <h2>@Flight1[0].DateFrom.ToShortDateString()</h2>
                                        <h6>@Flight1[0].DateFrom.TimeOfDay</h6>
                                        <p> @Flight1[0].DepartureCity.Name</p>
                                    </div>
                                    <div class="col-md-3">

                            @{
                                var ResultTime2 = (@Flight1[0].DateTo.TimeOfDay).Subtract(@Flight1[0].DateFrom.TimeOfDay);
                            }
                                        <p> @ResultTime2 </p>
                                        <div class="icon2">

                                            <div class="line"></div>
                                            <div class="line2"><i class="fa-solid fa-play"></i></div>
                                        </div>

                                    </div>
                                    <div class="col-md-3 data">
                                        <h2>@Flight1[0].DateTo.ToShortDateString()</h2>
                                        <h6>@Flight1[0].DateTo.TimeOfDay</h6>
                                        <p>@Flight1[0].ArrivalCity.Name</p>
                                    </div>

                                </div>

                    @*Flight2*@

                                <div class="row row2">
                                    <div class="col-md-3">
                                        <div class="Type">
                                            <div>  <i class="fa-sharp fa-solid fa-jet-fighter-up"></i></div>
                                            <div> <p>Economy</p></div>

                                        </div>
                                        <div class="Company">
                                            <div class="imge1"> <img src="img/1.png"></div>
                                            <div> <p class="name">Air Arab Egypt</p></div>

                                        </div>
                                    </div>
                                    <div class="col-md-3 data">
                                        <h2>@item.DateFrom.ToShortDateString()</h2>
                                        <h6>@item.DateFrom.TimeOfDay</h6>
                                        <p> @item.DepartureCity.Name</p>
                                    </div>
                                    <div class="col-md-3">

                            @{
                                var ResultTime3 = (@item.DateTo.TimeOfDay).Subtract(@item.DateFrom.TimeOfDay);
                            }
                                        <p> @ResultTime3 </p>
                                        <div class="icon2">

                                            <div class="line"></div>
                                            <div class="line2"><i class="fa-solid fa-play"></i></div>
                                        </div>

                                    </div>
                                    <div class="col-md-3 data">
                                        <h2>@item.DateTo.ToShortDateString()</h2>
                                        <h6>@item.DateTo.TimeOfDay</h6>
                                        <p>@item.ArrivalCity.Name</p>
                                    </div>

                                </div>


                            <div class="row row2 book justify-content-between">

                                <div class="col-md-4 text-start">
                                        <h5>@item.Price</h5>
                                </div>
                                <div class="col-md-4 text-end">
                                    <button class="btn2 btn btn-primary text-end">Book</button>
                                </div>
                            </div>
                        </div>
            }
        }




   <script src="~/lib/jquery/dist/jquery.min.js"></script>
    </body>
</html>




