@model CompanyRoleViewModel
@{
    Layout = "_formLayout";
}
<div>
<div class=" d-block">
    <h1 class="text-center d-block text-white ">Enter New Company</h1>
</div>

@* <div class="col-md-12 mt-5">*@
<form asp-controller="Company" asp-action="RegisterCompany" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
             <div class="form-group">
        <label asp-for="Name" class="text-white "></label>
        <input asp-for="Name" class="form-control text-white bg-transparent" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="text-white"></label>
        <input asp-for="Email" class="form-control text-white bg-transparent" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="text-white"></label>
        <input asp-for="Password" class="form-control text-white bg-transparent" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
        </div>
        <div class="col-md-6">

    <div class="form-group">
        <label asp-for="Confirm_Password" class="text-white"></label>
        <input asp-for="Confirm_Password" class="form-control text-white bg-transparent" />
        <span asp-validation-for="Confirm_Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="text-white"></label>
        <input asp-for="Phone" class="form-control text-white bg-transparent" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="text-white"></label>
        <input asp-for="Location" class="form-control text-white bg-transparent" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
        </div>
    </div>
    
   
    <button type="submit" class="btn btn-primary">Register</button>
</form>
</div>
@*</div>*@
