@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row">
    <div class="col-md-12 mt-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
           
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                  <label asp-for="Input.FirstName"  class="text-white"></label>
                <input asp-for="Input.FirstName" width="100%"  class="form-control bg-transparent " maxlength="300" autocomplete="username" aria-required="true" />
              
                <span asp-validation-for="Input.FirstName" class="text-white"></span>
            </div>


            <div class="form-floating">
                    <label asp-for="Input.LastName"  class="text-white"></label>
                <input asp-for="Input.LastName" class="form-control  bg-transparent" maxlength="300" autocomplete="username" aria-required="true" />
            
                <span asp-validation-for="Input.LastName" class="text-white"></span>
            </div>
            <div class="form-floating">
                 <label asp-for="Input.Email"  class="text-white"></label>
                <input asp-for="Input.Email" class="form-control  bg-transparent"  maxlength="300" autocomplete="username" aria-required="true" />
               
                <span asp-validation-for="Input.Email" class="text-white"></span>
            </div>
            <div class="form-floating">
                 <label asp-for="Input.Password"  class="text-white"></label>
                <input asp-for="Input.Password" class="form-control bg-transparent" maxlength="300" autocomplete="new-password" aria-required="true" />
               
                <span asp-validation-for="Input.Password" class="text-white"></span>
            </div>
            <div class="form-floating">
                 <label asp-for="Input.ConfirmPassword"  class="text-white"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control bg-transparent" maxlength="300" autocomplete="new-password" aria-required="true" />
               
                <span asp-validation-for="Input.ConfirmPassword" class="text-white"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 mt-5 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
